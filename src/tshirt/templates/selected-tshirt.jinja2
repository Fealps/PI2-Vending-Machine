{% load static %}
<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="{% static 'tshirts/selected.css' %}">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    </head>
    <body>
        <div class="bar-side lb bar-block card bg-lb">
            <h3 class=" font-weight-bold wc" style="padding-top: 80%"> Escolha o tamanho:</h3>


            <input type="radio" name="size-select" id="option-xp" value="xp" disabled>
            <input type="radio" name="size-select" id="option-p" value="p" disabled>
            <input onclick="window.location='{% url 'selectedTshirt' tshirts.1.id %}';" type="radio" name="size-select" id="option-m" value="m">
            <input onclick="window.location='{% url 'selectedTshirt' tshirts.0.id %}';" type="radio" name="size-select" id="option-g" value="g">
            <input type="radio" name="size-select" id="option-xg" value="xg" disabled>
            
            
            <label for="option-xp" class="bar-item bar-label" style="margin-top: -470!important" disabled>XP </label>
            <label for="option-p"  class="bar-item bar-label">P </label>
            <label for="option-m"  class="bar-item bar-label">M </label>
            <label for="option-g"  class="bar-item bar-label" disabled>G </label>
            <label for="option-xg" class="bar-item bar-label" disabled>XG</label>

            <h1 class="font-weight-bold wc" style="margin-top: 370px">
                Pre√ßo: R$ {{ tshirt.price }}
            </h1>
            <a href="{% url 'payments:payment' id=tshirt.id %}">
            <button class=" btn btn-buy bg-action" style="margin-top: 80px"> 
                <h1 class="font-weight-bold wc" >Comprar</h1>
            </button>
            </a>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="col-3">
                <a href="{% url 'tshirt' %}"> 
                    <button class=" btn btn-return"> 
                        <i class="fa fa-arrow-left action fa-xxg" aria-hidden="true"></i>
                    </button>
                </a>
            </div>
            <div class="col-2"> 
                <h2 class="font-weight-bold db">
                    {{ tshirt.name }}
                </h2>
            </div>
            <div class="col-7"></div>
        </nav>
        <div class="image-full">
            <img src="{{ tshirt.photo_url|default_if_none:'#' }}"/>
        </div>
        <div class="image-icon">
            <img src="{{ tshirt.photo_url|default_if_none:'#' }}"/>
        </div>
    </body>
</html>