{% load static %}
<html>
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="{% static 'tshirts/index.css' %}">
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</head>
<body>
  <section class="list-tshirts">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="row">
          {% for tshirt in tshirts %}
            <div class="col-lg-4 col-md-6 col-sm-6">
              <div class="product-item">
              <a href="{% url 'selectedTshirt' tshirt.id %}">
                <div class="card">
                  <img class="card-img-top" src="{{ tshirt.photo_url|default_if_none:'#'}}" alt="Card image cap">
                  <div class="product-info">
                    <div class="product-name">
                      <span>
                        {{ tshirt.name }}
                      </span>
                    </div>
                    <div class="product-price">
                      <span>
                        R$ {{ tshirt.price }}
                      </span>
                    </div>
                  </div>
                </div>
              </a>
              </div>
            </div>
          {% endfor%}
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="product-pagination">
              {% for page_number in page_obj.paginator.page_range %}
                <a
                  href="{% url 'tshirts' page_number %}"
                  class="{% if page_number == page_obj.number %}current{% endif %}"
                >
                  {{page_number}}
                </a>
              {% endfor %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
</html>